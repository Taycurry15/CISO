# ComplianceFlow Landing Page - Environment Variables

# ===========================
# API Configuration
# ===========================

# Backend API Base URL
API_BASE_URL=https://api.complianceflow.app

# Authentication Endpoints
API_LOGIN_ENDPOINT=/api/v1/auth/login
API_SIGNUP_ENDPOINT=/api/v1/auth/signup
API_LOGOUT_ENDPOINT=/api/v1/auth/logout
API_REFRESH_ENDPOINT=/api/v1/auth/refresh

# Password Reset
API_FORGOT_PASSWORD_ENDPOINT=/api/v1/auth/forgot-password
API_RESET_PASSWORD_ENDPOINT=/api/v1/auth/reset-password

# OAuth Endpoints
API_OAUTH_GOOGLE=/api/v1/auth/oauth/google
API_OAUTH_MICROSOFT=/api/v1/auth/oauth/microsoft

# ===========================
# OAuth Configuration
# ===========================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://complianceflow.app/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://complianceflow.app/auth/microsoft/callback
MICROSOFT_TENANT_ID=common

# ===========================
# Analytics & Tracking
# ===========================

# Google Analytics 4
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
GTM_CONTAINER_ID=GTM-XXXXXXX

# Mixpanel (optional)
MIXPANEL_TOKEN=your-mixpanel-token

# Segment (optional)
SEGMENT_WRITE_KEY=your-segment-write-key

# Hotjar (optional)
HOTJAR_SITE_ID=your-hotjar-site-id

# ===========================
# SEO & Social Media
# ===========================

# Site Information
SITE_URL=https://complianceflow.app
SITE_NAME=ComplianceFlow
SITE_DESCRIPTION=CMMC Compliance in Days, Not Months
SITE_KEYWORDS=CMMC,compliance,automation,AI,defense contractors,DIB

# Social Media
TWITTER_HANDLE=@complianceflow
FACEBOOK_PAGE=complianceflow
LINKEDIN_PAGE=company/complianceflow

# Open Graph Image
OG_IMAGE_URL=https://complianceflow.app/assets/images/og-image.jpg

# ===========================
# Security
# ===========================

# CSRF Token (if using)
CSRF_TOKEN_NAME=_csrf
CSRF_HEADER_NAME=X-CSRF-Token

# Session Configuration
SESSION_COOKIE_NAME=cf_session
SESSION_TIMEOUT=86400

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_SIGNUP_ATTEMPTS=3
RATE_LIMIT_WINDOW=900

# ===========================
# Email Service
# ===========================

# Email Provider (sendgrid, mailgun, ses)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=hello@complianceflow.app
EMAIL_FROM_NAME=ComplianceFlow

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.complianceflow.app

# AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key

# ===========================
# CDN & Assets
# ===========================

# CDN URL (optional)
CDN_URL=https://cdn.complianceflow.app

# Asset Version (for cache busting)
ASSET_VERSION=1.0.0

# ===========================
# Feature Flags
# ===========================

# Enable/Disable Features
FEATURE_GOOGLE_AUTH=true
FEATURE_MICROSOFT_AUTH=true
FEATURE_DEMO_MODE=false
FEATURE_ANALYTICS=true
FEATURE_CHAT_WIDGET=false

# ===========================
# Error Tracking
# ===========================

# Sentry (optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# ===========================
# Deployment
# ===========================

# Environment
NODE_ENV=production
APP_ENV=production

# Build Configuration
BUILD_SOURCE_MAPS=false
BUILD_MINIFY=true

# ===========================
# Third-Party Services
# ===========================

# Intercom (optional)
INTERCOM_APP_ID=your-intercom-app-id

# HubSpot (optional)
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# Stripe (for billing)
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxx

# reCAPTCHA (optional)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
