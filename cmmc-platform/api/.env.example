# Database Configuration
DATABASE_URL=postgresql://cmmc_user:cmmc_password@localhost:5432/cmmc_platform
DATABASE_POOL_MIN_SIZE=5
DATABASE_POOL_MAX_SIZE=20

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
STORAGE_PATH=/var/cmmc/evidence
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
EMBEDDING_MODEL=text-embedding-ada-002
AI_MODEL=gpt-4
VECTOR_DIMENSIONS=3072

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=cmmc-evidence-bucket
AWS_REGION=us-east-1

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@cmmc-platform.com

# Application Settings
APP_NAME=CMMC Compliance Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-change-this
