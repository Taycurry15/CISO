# CMMC Platform - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=cmmc_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=cmmc_platform
DATABASE_URL=postgresql://cmmc_admin:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/cmmc_platform

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# MinIO Object Storage Configuration
# =============================================================================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD_HERE
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=cmmc-evidence
MINIO_USE_SSL=false

# =============================================================================
# AI/ML API Keys
# =============================================================================
# OpenAI API Key (for GPT-4 and embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_RANDOM_SECRET_KEY_HERE

# JWT Token Expiration (in seconds)
JWT_EXPIRATION=3600

# CISO Assistant Django Secret Key (generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
CISO_ASSISTANT_SECRET_KEY=CHANGE_ME_DJANGO_SECRET_KEY_HERE

# =============================================================================
# CISO Assistant Database Configuration
# =============================================================================
CISO_ASSISTANT_DB_HOST=postgres
CISO_ASSISTANT_DB_PORT=5432
CISO_ASSISTANT_DB_NAME=cmmc_platform
CISO_ASSISTANT_DB_USER=cmmc_admin
CISO_ASSISTANT_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application Domain (for production)
DOMAIN=localhost

# =============================================================================
# Integration Configuration (Optional)
# =============================================================================
# Nessus/Tenable.io
NESSUS_MODE=file
NESSUS_ACCESS_KEY=
NESSUS_SECRET_KEY=
NESSUS_BASE_URL=https://cloud.tenable.com
NESSUS_EXPORT_PATH=/var/cmmc/nessus_exports

# Splunk
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=
SPLUNK_API_URL=
SPLUNK_API_TOKEN=

# Azure
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-gov-west-1

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@cmmc-platform.com

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_AI_ANALYSIS=true
ENABLE_PROVIDER_INHERITANCE=true
ENABLE_DIAGRAM_EXTRACTION=false
ENABLE_CONTINUOUS_MONITORING=false

# =============================================================================
# Performance Tuning
# =============================================================================
# API Workers (adjust based on CPU cores)
API_WORKERS=4

# Celery Workers
CELERY_WORKERS=2

# Database Connection Pool
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=20

# =============================================================================
# Development/Testing (Development Only)
# =============================================================================
# Enable API debug mode
DEBUG=false

# Enable SQL query logging
SQL_ECHO=false

# Disable authentication (for testing only)
DISABLE_AUTH=false
