# CMMC Compliance Platform - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=CMMC Compliance Platform
APP_VERSION=1.0.0
ENVIRONMENT=production
DOMAIN=your-domain.com

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=cmmc_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=cmmc_platform

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ============================================================================
# MinIO (Object Storage) Configuration
# ============================================================================
MINIO_ROOT_USER=cmmc_minio
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MINIO_ENDPOINT=minio:9000

# ============================================================================
# Security & Authentication
# ============================================================================
JWT_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY_HERE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# AI/ML Service API Keys
# ============================================================================
# OpenAI API Key for GPT-4/GPT-3.5
OPENAI_API_KEY=sk-...

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=CMMC Platform

# ============================================================================
# AWS Configuration (for cloud integrations)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=https://your-domain.com

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# Monitoring (Optional)
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_RETENTION_DAYS=7
S3_BACKUP_BUCKET=

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SWAGGER_DOCS=false
ENABLE_REGISTRATION=true
ENABLE_AI_FEATURES=true

# ============================================================================
# Production Settings
# ============================================================================
DEBUG=false
RELOAD=false
HOST=0.0.0.0
PORT=8000
